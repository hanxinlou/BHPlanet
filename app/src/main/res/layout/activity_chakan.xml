<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/fanhui"
            android:background="@drawable/fanhui"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/biaoti"
            android:text="回复详情"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tou"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/head"
            android:background="@drawable/button_view_style" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="37dp"
            android:text="不要吃一点肥肉的圣诞老人"
            android:textColor="#505050"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/time"
            android:text="2分钟前"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/name"
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dianliang1"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/undianliang"
            android:layout_alignParentRight="true"
            android:textColor="#505050" />

    </RelativeLayout>

    <TextView
        android:id="@+id/pneirong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="3dip"
        android:layout_gravity="center_vertical"
        android:text="你看 ，你们从风起稻香，终于走到了世外蓬莱，依旧没情缘"
        android:textColor="#000000"
        android:textSize="18sp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        />
    <TextView
        android:id="@+id/tiaohuifu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingLeft="3dip"
        android:text="6条回复"
        android:textSize="17sp"
        android:textColor="#505050"
        />
   <ListView
       android:id="@+id/list_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:paddingLeft="3dip">

   </ListView>

</LinearLayout>
