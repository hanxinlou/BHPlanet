<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contacts_items"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff176" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:text="脑洞星球"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/fabu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tou"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/head" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Tom"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:layout_marginRight="0.2dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="10-12 13:32"
                        android:textColor="#ffcccccc"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvzuopin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:layout_marginRight="0.2dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="上传了作品"
                        android:textColor="#ffcccccc"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



            <TextView
                android:id="@+id/tvContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:text="有点意思"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/imgphoto"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:src="@drawable/xiongmao" />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/zhuan"
            android:background="@drawable/zhuan"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/nzhuan"
            android:text="2"
            android:textSize="15sp"
            android:layout_width="70dp"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/ping"
            android:background="@drawable/ping"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/nping"
            android:text="2"
            android:textSize="15sp"
            android:layout_width="70dp"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/zan"
            android:background="@drawable/unzan"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/nzan"
            android:text="2"
            android:textSize="15sp"
            android:layout_width="70dp"
            android:layout_height="20dp" />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zhuanfa"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgHead1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/head3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="ichuan"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:layout_marginRight="0.2dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="2小时前"
                        android:textColor="#ffcccccc"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <TextView
            android:id="@+id/tvContent1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:text="哈哈我头笑掉"
            android:textSize="15sp"/>
<LinearLayout
    android:id="@+id/zhuand"
    android:background="#f2f2f2f2"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/zuozhetou"
        android:src="@drawable/head1"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/zuozheid"
        android:text="作者小飞侠的作品"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
        <ImageView
            android:id="@+id/imgphoto1"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:src="@drawable/lu" />
<TextView
    android:id="@+id/zuopin"
    android:layout_marginTop="4dp"
    android:text="小鹿"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/zhuan1"
                android:background="@drawable/zhuan"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/nzhuan1"
                android:text="2"
                android:textSize="15sp"
                android:layout_width="70dp"
                android:layout_height="20dp" />
            <Button
                android:id="@+id/ping1"
                android:background="@drawable/ping"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/nping1"
                android:text="2"
                android:textSize="15sp"
                android:layout_width="70dp"
                android:layout_height="20dp" />
            <Button
                android:id="@+id/zan1"
                android:background="@drawable/unzan"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/nzan1"
                android:text="2"
                android:textSize="15sp"
                android:layout_width="70dp"
                android:layout_height="20dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>

