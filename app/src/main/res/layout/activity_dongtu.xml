<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#fff176"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/nao"
            android:layout_centerInParent="true"
            android:text="脑洞星球"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/chuantu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/bianji"
            android:layout_marginRight="50dp"
            android:background="@drawable/xuanqu" />
        <Button
            android:id="@+id/bianji"
            android:text="模板"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#fff176"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/picture"
        android:src="@drawable/xiongmao"
        android:layout_width="wrap_content"
        android:layout_height="170dp" />
    <EditText
        android:id="@+id/tuneirong1"
        android:hint="请输入内容"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/tuneirong2"
        android:hint="请输入内容"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/tuneirong3"
        android:hint="请输入内容"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/wancheng"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/wancheng" />

        <Button
            android:id="@+id/quxiao"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="180dp"
            android:background="@drawable/quxiao" />
    </RelativeLayout>
</LinearLayout>