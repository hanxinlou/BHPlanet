<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff176" >

        <ImageButton
            android:id="@+id/fanhui"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/fanhui" />

        <TextView
            android:id="@+id/anquan"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="9dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="脑洞星球" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/jinkela"
                android:src="@drawable/jinkela"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/diyiju"
                android:text="第一句"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_edit"
                android:hint="金坷垃好处都有啥"
                android:paddingLeft="2dp"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/dierju"
                android:text="第二句"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="谁说对了就给他"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/disanju"
                android:text="第三句"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="肥料掺了金坷垃"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/disiju"
                android:text="第四句"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="不流失 不蒸发 零浪费"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/diwuju"
                android:text="第五句"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="肥料掺了金坷垃"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/diliuju"
                android:text="第六句"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="能吸收两米下的氮磷钾"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <ImageView
                android:id="@+id/wancheng"
                android:src="@drawable/wancheng"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>