<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#7fe5e5e5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#fff176">

        <ImageView
            android:id="@+id/head"
            android:padding="3dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/img1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="脑洞星球"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/shezhi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shezhi" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:src="@drawable/geren"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    <TextView
        android:layout_width="60dp"
        android:text="个人中心"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" /></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:layout_gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/dongtai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="动态" />

        <Button
            android:id="@+id/guanzhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="关注" />

        <Button
            android:id="@+id/fensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="粉丝" />

        <Button
            android:id="@+id/shoucang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:paddingLeft="5dp"


            android:background="@android:color/background_light"
            android:text="收藏" />

        <Button
            android:id="@+id/lishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="3dp"

            android:layout_weight="1"

            android:background="@android:color/background_light"
            android:text="历史" />

        <!--<Button-->
            <!--android:id="@+id/zuopin"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingLeft="1dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_weight="1"-->
            <!--android:drawableStart="@drawable/zuopin"-->
            <!--android:drawableLeft="@drawable/zuopin"-->
            <!--android:background="@android:color/background_light"-->
            <!--android:text="作品" />-->
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:src="@drawable/tongzhi1"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    <TextView
        android:layout_width="60dp"
        android:text="通知"
        android:layout_gravity="center_vertical"
      android:layout_height="wrap_content" /></LinearLayout>

        <Button
            android:id="@+id/xitong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:layout_marginTop="5dp"

            android:background="@android:color/background_light"
            android:text="系统通知" />




</LinearLayout>





