<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff176" >
        <ImageButton
            android:id="@+id/fanhui"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/fanhui" />
        <TextView
            android:id="@+id/anquan"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25sp"
            android:text="脑洞星球" />


    </RelativeLayout>

    <VideoView
        android:id="@+id/video1"
        android:layout_width="match_parent"
        android:layout_height="170dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zuotou"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_view_style"
            android:contentDescription="@string/app_name"
            android:src="@drawable/head1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出来挨骂"
                    android:textColor="#090808"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID 周哈哈"
                    android:textColor="#505050"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imagebutton3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/unzan"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="1100"
            android:textColor="#505050"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imagebutton4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ping" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="123"
            android:textColor="#505050"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imagebutton5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/unshoucang" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="800"
            android:textColor="#505050"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imagebutton6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/zhuan"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="800"
            android:textColor="#505050"
            android:textSize="20sp" />

    </LinearLayout>


    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>