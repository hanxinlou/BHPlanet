<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff176" >

        <ImageButton
            android:id="@+id/fanhui"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/fanhui" />

        <TextView
            android:id="@+id/anquan"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="9dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="脑洞星球" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sorry"
                android:src="@drawable/sorry"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />
            <TextView
                android:id="@+id/diyiju"
                android:text="第一句"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="好啊"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"  />
            <TextView
                android:id="@+id/dierju"
                android:text="第二句"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="就算你是一流工程师"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/disanju"
                android:text="第三句"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="就算你出报告再完美"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/disiju"
                android:text="第四句"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="我叫你改报告你就要改"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/diwuju"
                android:text="第五句"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="毕竟我是客户"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/diliuju"
                android:text="第六句"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="客户了不起啊"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/diqiju"
                android:text="第七句"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="sorry 客户真的了不起"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/dibaju"
                android:text="第八句"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="以后叫他天天改报告"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/dijiuju"
                android:text="第九句"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint="天天改 天天改"
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/dishiju"
                android:text="左"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ten"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint=""
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/di11ju"
                android:text="右"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/eleven"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint=""
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <TextView
                android:id="@+id/di12ju"
                android:text="另一侧"
                android:padding="3dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/twelve"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="2dp"
                android:hint=""
                android:textSize="20sp"
                android:background="@drawable/shape_edit"
                />
            <ImageView
                android:id="@+id/wancheng"
                android:src="@drawable/wancheng"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
