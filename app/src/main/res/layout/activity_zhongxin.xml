<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff176" >

        <ImageButton
            android:id="@+id/fanhui"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/fanhui" />

        <TextView
            android:id="@+id/zhongxin"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="账号安全中心" />

    </RelativeLayout>
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="wrap_content"
    android:layout_height="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:text="最近登录记录"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/youjian"/>
</RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/qq"
            android:text="绑定QQ账号"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qqhao"
            android:text="1234534560"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_alignRight="@+id/gaiqq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/gaiqq"
            android:src="@drawable/youjian"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>

 <RelativeLayout
     android:background="#ffffff"
     android:layout_width="wrap_content"
     android:layout_height="50dp">
    <TextView
        android:text="修改密码"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
     <ImageButton
         android:id="@+id/gaimi"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true"
         android:src="@drawable/youjian"
         android:layout_centerVertical="true"
         android:layout_width="30dp"
         android:layout_height="30dp" />
</RelativeLayout>
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="wrap_content"
    android:layout_height="50dp">
  <TextView
      android:text="实名认证"
      android:textColor="#000000"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <ImageButton
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/youjian"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/shou"
            android:text="绑定手机"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/手机"
            android:text="更换手机"
            android:textColor="#000000"
            android:layout_marginRight="30dp"
            android:layout_alignRight="@+id/gaiji"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/gaiji"
            android:src="@drawable/youjian"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/you"
            android:text="绑定邮箱"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/youxiang"
            android:text="1234534560@qq.com"
            android:textColor="#000000"
            android:layout_marginRight="30dp"
            android:layout_alignRight="@+id/gaiyou"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/gaiyou"
            android:src="@drawable/youjian"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <TextView
            android:text="密保问题"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/gaimibao"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/youjian"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>

</LinearLayout>
