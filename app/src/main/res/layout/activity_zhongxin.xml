<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff176" >

        <ImageButton
            android:id="@+id/fanhui"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/fanhui" />

        <TextView
            android:id="@+id/zhongxin"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="账号安全中心" />

    </RelativeLayout>

    <Button
        android:id="@+id/jilu"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/youjian"
        android:drawableEnd="@drawable/youjian"
        android:background="@android:color/background_light"
        android:text="最近登录记录" />
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/qq"
            android:text="绑定QQ账号"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qqhao"
            android:text="1234534560"
            android:textColor="#000000"
            android:layout_marginLeft="178dp"
            android:layout_marginStart="178dp"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/gaiqq"
            android:src="@drawable/youjian"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>
    <Button
        android:id="@+id/mima"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/youjian"
        android:drawableEnd="@drawable/youjian"
        android:background="@android:color/background_light"
        android:text="修改密码" />
    <Button
        android:id="@+id/gaima"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/youjian"
        android:drawableEnd="@drawable/youjian"
        android:background="@android:color/background_light"
        android:text="实名认证" />
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/shou"
            android:text="绑定手机"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/手机"
            android:text="更换手机"
            android:textColor="#000000"
            android:layout_marginLeft="217dp"
            android:layout_marginStart="217dp"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/gaiji"
            android:src="@drawable/youjian"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/you"
            android:text="绑定邮箱"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/youxiang"
            android:text="1234534560@qq.com"
            android:textColor="#000000"
            android:layout_marginLeft="128dp"
            android:layout_marginStart="128dp"
            android:layout_gravity="center_vertical"
            android:layout_width="150dp"
            android:layout_height="25dp" />
        <ImageButton
            android:id="@+id/gaiyou"
            android:src="@drawable/youjian"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>
    <Button
        android:id="@+id/mibao"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/youjian"
        android:drawableEnd="@drawable/youjian"
        android:background="@android:color/background_light"
        android:text="密保问题" />
</LinearLayout>
