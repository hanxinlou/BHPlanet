<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f2f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff176" >

        <ImageButton
            android:id="@+id/fanhui"
            android:src="@drawable/back1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="#fff176" />

        <TextView
            android:id="@+id/text"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="9dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="账号资料" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/tou"
            android:text="头像"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="100dp"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/toux"
            android:background="@drawable/head"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_marginLeft="200dp"
            android:layout_height="80dp" />

        <ImageButton
            android:id="@+id/gaitou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/youjian" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/ni"
            android:text="昵称"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/name"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:text="一只小澄妹"
            android:textSize="18sp" />
        <ImageButton
            android:id="@+id/gainame"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/youjian" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/id"
            android:text="ID"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/uid"
            android:text="10280638"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="220dp"
            android:layout_marginStart="220dp"
            android:textSize="18sp"
            android:layout_width="100dp"
            android:layout_height="25dp" />
        <ImageButton
            android:id="@+id/gaiid"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/youjian" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/sex"
            android:text="性别"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/sexx"
            android:text="保密"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="270dp"
            android:layout_marginStart="270dp"
            android:textSize="18sp"
            android:layout_width="50dp"
            android:layout_height="25dp" />
        <ImageButton
            android:id="@+id/gaisex"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/youjian" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/birth"
            android:text="出生年月"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="80dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/birthh"
            android:text="1990-01-10"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp"
            android:textSize="18sp"
            android:layout_width="100dp"
            android:layout_height="25dp" />
        <ImageButton
            android:id="@+id/gaibirth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/youjian" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/qianming"
            android:text="个性签名："
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="100dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/qianmingg"
            android:text="呵呵"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_width="280dp"
            android:layout_height="25dp" />
        <ImageButton
            android:id="@+id/gaiqian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/youjian" />
    </LinearLayout>
    <Button
        android:id="@+id/exit"
        android:background="#ffffff"
        android:layout_marginTop="180dp"
        android:text="退出登录"
        android:textSize="25dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />
</LinearLayout>