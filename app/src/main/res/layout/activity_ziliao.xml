<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f2f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff176" >

        <ImageButton
            android:id="@+id/fanhui"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/fanhui" />

        <TextView
            android:id="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:text="账号资料"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="90dp">
        <TextView
            android:id="@+id/tou"
            android:text="头像"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignRight="@+id/gaitou"
            android:layout_marginRight="30dp"
            android:background="@drawable/test"
            android:src="@drawable/img1"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/gaitou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/youjian" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/ni"
            android:text="昵称"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nickname"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/gainame"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginRight="30dp"
             />

        <ImageButton
            android:id="@+id/gainame"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_marginBottom="52dp"
            android:src="@drawable/youjian" />

    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/id"
            android:text="ID"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/uid"
            android:background="@null"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_alignRight="@+id/gaiid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/gaiid"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_marginBottom="52dp"
            android:src="@drawable/youjian" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/sex"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:paddingLeft="5dp"
            android:text="性别"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/sexx"
            android:background="@null"
            android:textColor="#000000"
            android:layout_marginRight="30dp"
            android:layout_alignRight="@+id/gaisex"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/gaisex"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_marginBottom="52dp"
            android:src="@drawable/youjian" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/birth"
            android:text="出生年月"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/birthh"
            android:background="@null"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_alignRight="@+id/gaibirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/gaibirth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/youjian" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="1dp"

        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/qianming"
            android:text="个性签名："
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qianmingg"
            android:background="@null"
            android:textColor="#000000"
            android:layout_alignLeft="@+id/qianming"
            android:layout_marginLeft="70dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/gaiqian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/youjian" />
    </RelativeLayout>
    <Button
        android:id="@+id/exit"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:text="退出登录"
        android:textSize="20sp"
        android:layout_width="fill_parent"
        android:layout_height="50dp" />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:focusable="true"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_discuss"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:hint="输入......"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="完成"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>