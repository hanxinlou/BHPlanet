<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/zhuanfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tou1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/head3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dongname1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="3dip"
                    android:singleLine="true"
                    android:text="ichuan"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dongdate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:layout_marginRight="0.2dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="4-11 16:17"
                        android:textColor="#ffcccccc"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/dongneirong1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:paddingLeft="3dip"
            android:text="哈哈我头笑掉"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/zhuand"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f2f2f2f2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zuozhetou"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/head2" />

                <TextView
                    android:id="@+id/zuozheid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="3dip"
                    android:textColor="#000000"
                    android:text="作者小飞侠的作品" />
            </LinearLayout>

            <ImageView
                android:id="@+id/dongimage1"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:src="@drawable/cxk" />

            <TextView
                android:id="@+id/zuopinming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:text="鸡你太美" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zhuan1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/zhuan" />

            <TextView
                android:id="@+id/nzhuan1"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:text="1"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ping1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/ping" />

            <TextView
                android:id="@+id/nping1"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:text="3"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/zan1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/unzan" />

            <TextView
                android:id="@+id/nzan1"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:text="2"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
