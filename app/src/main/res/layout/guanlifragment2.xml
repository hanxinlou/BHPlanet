<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/imagebutton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_view_style"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="国漫" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="  XXXXXXX——XXX"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="  TGG" />

            <Button
                android:id="@+id/dianzan1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/triangle"
                android:drawableLeft="@drawable/triangle"
                android:background="@android:color/background_light"
                android:text="123"
                android:textSize="10sp" />
            <Button
                android:id="@+id/dianliangshu1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/undianliang1"
                android:drawableLeft="@drawable/undianliang1"
                android:background="@android:color/background_light"
                android:text="123"
                android:textSize="10sp" />
            <Button
                android:id="@+id/pinglunliang1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/pinglun"
                android:drawableLeft="@drawable/pinglun"
                android:background="@android:color/background_light"
                android:text="456"
                android:textSize="10sp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/imagebutton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_view_style"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="国漫" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="  XXXXXXX——XXX"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="  TGG" />

            <Button
                android:id="@+id/dianzan2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/triangle"
                android:drawableLeft="@drawable/triangle"
                android:background="@android:color/background_light"
                android:text="123"
                android:textSize="10sp" />
            <Button
                android:id="@+id/dianliangshu2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/undianliang1"
                android:drawableLeft="@drawable/undianliang1"
                android:background="@android:color/background_light"
                android:text="123"
                android:textSize="10sp" />
            <Button
                android:id="@+id/pinglunliang2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/pinglun"
                android:drawableLeft="@drawable/pinglun"
                android:background="@android:color/background_light"
                android:text="456"
                android:textSize="10sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>